{
  "name": "work-progress",
  "displayName": "Work Progress",
  "icon": "icon.png",
  "description": "A visual studio code extension that idenifies how much progress you have made during working hours",
  "version": "1.0.0",
  "publisher": "andrinoff",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrinoff/vscode-work-progress.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],

  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Work Progress Settings",
      "properties": {
        "work-progress.apiKey": {
          "type": "string",
          "default": "",
          "description": "Get your API key from https://vscode-work-progress.vercel.app/signin/signin.html"
        },
        "work-progress.weeklyReport": {
          "type": "boolean",
          "default": true,
          "description": "Send weekly report to email"
        },
        "work-progress.screenTimeReminder": {
          "type": "boolean",
          "default": true,
          "description": "Send notification that you have been working for too long"
        }
      }
    },
    "commands": [
      {
        "command": "work-progress.login",
        "title": "Work Progress: Login"
      },
      {
        "command": "work-progress.setGoal",
        "title": "Work Progress: Set Goal"
      },
      {
        "command": "work-progress.logout",
        "title": "Work Progress: Logout"
      },
      {
        "command": "work-progress.clockIn",
        "title": "Work Progress: Clock in"
      },
      {
        "command": "work-progress.clockOut",
        "title": "Work Progress: Clock out"
      },
      {
        "command": "work-progress.status",
        "title": "Work Progress: Status"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "nodemailer": "^6.10.1"
  }
}
